{
    "ConnectionStrings": {
        "Identity": "Server=127.0.0.1;User Id=postgres;Password=admin;Enlist=true;Database=moneteer-identity;"
    },
    "PublicOrigin": "", // https://leastprivilege.com/2017/10/09/new-in-identityserver4-v2-simplified-configuration-behind-load-balancers-or-reverse-proxies/Ï
    "Logging": {
        "LogLevel": {
            "Default": "Debug",
            "System": "Information",
            "Microsoft": "Information"
        },
        "Console": {
            "IncludeScopes": true
        }
    },
    "AllowedCorsOrigins": "http://localhost:4200",
    "IdentityServer": {
        "IssuerUri": "urn:sso.moneteer.com",
        "Clients": [
            {
                "ClientId": "moneteer-spa",
                "ClientName": "Moneteer SPA Client",
                "AllowedGrantTypes": [
                    "implicit"
                ],
                "AllowAccessTokensViaBrowser": true,
                "RequireClientSecret": false,
                "RequireConsent": false,
                "RedirectUris": [
                    "http://localhost:4200/auth-callback",
                    "http://localhost:4200/silent-callback"
                ],
                "PostLogoutRedirectUris": [
                    "http://localhost:4200/"
                ],
                "AllowedScopes": [
                    "openid",
                    "profile",
                    "email",
                    "moneteer-api"
                ],
                "AllowedCorsOrigins": [
                    "http://localhost:4200"
                ]
            },
            {
                "ClientId": "moneteer-mvc",
                "ClientName": "Moneteer MVC Client",
                "AllowedGrantTypes": [
                    "implicit"
                ],
                "RequireConsent": false,
                "RedirectUris": [
                    "http://localhost:4500/signin-callback-oidc"
                ],
                "PostLogoutRedirectUris": [
                    "http://localhost:4500/signout-callback-oidc"
                ],
                "AllowedScopes": [
                    "openid",
                    "profile",
                    "email"
                ],
                "AllowedCorsOrigins": [
                    "http://localhost:4500"
                ]
            }
        ]
    }
}