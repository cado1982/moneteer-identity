{
  "ASPNETCORE_ENVIRONMENT": "Production",
  "AllowedHosts": "*",
  "AllowedCorsOrigins": "https://app.moneteer.com",
  "PublicOrigin": "https://identity.moneteer.com", // https://leastprivilege.com/2017/10/09/new-in-identityserver4-v2-simplified-configuration-behind-load-balancers-or-reverse-proxies/Ï
  "IdentityServer": {
    "IssuerUri": "urn:sso.moneteer.com",
    "Clients": [
        {
            "ClientId": "moneteer-spa",
            "ClientName": "Moneteer SPA Client",
            "AllowedGrantTypes": [
                "implicit"
            ],
            "AllowAccessTokensViaBrowser": true,
            "RequireClientSecret": false,
            "RequireConsent": false,
            "RedirectUris": [
                "https://app.moneteer.com/auth-callback",
                "https://app.moneteer.com/silent-callback"
            ],
            "PostLogoutRedirectUris": [
                "https://app.moneteer.com/"
            ],
            "AllowedScopes": [
                "openid",
                "profile",
                "email",
                "moneteer-api"
            ],
            "AllowedCorsOrigins": [
                "https://app.moneteer.com"
            ]
        },
        {
            "ClientId": "moneteer-mvc",
            "ClientName": "Moneteer MVC Client",
            "AllowedGrantTypes": [
                "implicit"
            ],
            "RequireConsent": false,
            "RedirectUris": [
                "https://www.moneteer.com/signin-callback-oidc"
            ],
            "PostLogoutRedirectUris": [
                "https://www.moneteer.com/signout-callback-oidc"
            ],
            "AllowedScopes": [
                "openid",
                "profile",
                "email"
            ],
            "AllowedCorsOrigins": [
                "https://www.moneteer.com"
            ]
        }
    ]
}
}
