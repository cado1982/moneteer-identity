@model Moneteer.Identity.ViewModels.LogoutViewModel

<form asp-action="Logout">
    <input type="hidden" name="logoutId" value="@Model.LogoutId" />

    <div class="container my-5">
        <div class="row">
            <div class="card shadow-lg rounded col-md-8 col-lg-6 offset-md-2 offset-lg-3 p-0">
                <h5 class="card-header">Log Out?</h5>
                <div class="card-body">
                    Are you sure you would like to log out?
                </div>
                <div class="card-footer">
                    <button class="btn btn-primary" type="submit">Log Out</button>
                </div>
            </div>

        </div>
    </div>
</form>


