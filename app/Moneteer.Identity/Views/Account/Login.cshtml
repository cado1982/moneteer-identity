@model Moneteer.Identity.ViewModels.LoginViewModel

<div class="container my-5">
    <div class="row justify-content-center">
        <h1 class="mb-5 text-primary font-weight-bolder">Moneteer</h1>
    </div>
     
    <form asp-action="Login" method="post" class="login" novalidate>
        <div class="row">
            <input type="hidden" asp-for="ReturnUrl" />
            <div class="card shadow-lg rounded col-md-8 col-lg-6 offset-md-2 offset-lg-3 p-0">
                <h5 class="card-header">Login</h5>
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control form-control-lg" placeholder="Enter your email" autofocus />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" class="form-control form-control-lg" placeholder="••••••••••" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check">
                        <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
                        <label class="form-check-label">
                            Remember Me
                        </label>
                    </div>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    @if (Model.Error != null)
                    {
                        <div class="error active">
                            @Model.Error
                        </div>
                    }
                    @if (Model.ShouldConfirmEmail)
                    {
                        <div class="error active">
                            You must confirm your email address before logging in.
                            <a href="https://localhost:4500/account/resendsignuplink">Resend link</a>
                        </div>

                    }
                </div>

                <div class="card-footer">
                    <div class="container-fluid">
                        <div class="row align-items-center">
                            <a class="col-md-6 p-0 mb-2 mb-md-0" href="#">Forgot your password?</a>
                            <button type="submit" class="col-md-6 btn btn-primary">Login</button>        
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>
    </form>

    <div class="m-5 text-center">
        <div>Don't have an account yet?</div>
        <div><a href="#">Get Started</a></div>
    </div>
</div>


